{
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "moduleResolution": "Node",
      "lib": ["dom", "esnext"],
      "outDir": "dist/",
      "esModuleInterop": true,
      "strict": false,
      "noEmit": false,                 
      "declaration": true,          
      "skipLibCheck": true,
      "sourceMap": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "test"]
  }
  